{
  "name": "clicktree",
  "version": "0.1.0",
  "description": "ClickTree Electron app to grow procedural trees on click.",
  "license": "MIT",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "lint": "echo 'No lint configured.'"
  },
  "build": {
    "appId": "com.clicktree.app",
    "productName": "ClickTree",
    "files": [
      "main.js",
      "preload.js",
      "google-oauth.json",
      "index.html",
      "renderer.js",
      "panel-registry.js",
      "yt-panel.js",
      "yt-panel.css",
      "timer-panel.js",
      "timer-panel.css",
      "cards-panel.js",
      "id-card.css",
      "styles.css",
      "panels.css",
      "auth-panel.js",
      "auth-controller.js",
      "auth/**/*",
      "vendor/**/*",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "yt-search": "^2.13.1"
  },
  "devDependencies": {
    "electron": "^29.4.0",
    "electron-builder": "^24.6.4"
  }
}
